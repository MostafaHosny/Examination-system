                        <a class="@((ViewBag.Page == "Exams Report") ? "active-menu" : "")" href="/student/exams/StudentReport"><i class="fa fa-list-alt fa-2x" ></i>Exams Report</a>
                    </li>
                    <li>
                        <a class="@((ViewBag.Page == "change password") ? "active-menu" : "")" href="/student/students/edit"><i class="fa fa-list-alt fa-2x"></i>Change Password  </a>
                    </li>


                </ul>

            </div>

        </nav>
        <!-- /. NAV SIDE  -->
        <div id="page-wrapper">
            <div id="page-inner">
                @RenderBody()
                @*<div id="counter"> </div>
                <div class="desc">
                    <div>Days</div>
                    <div>Hours</div>
                    <div>Minutes</div>
                    <div>Seconds</div>
                </div>
                <br />
                <br />
                <br />
                <div id="counter_2"></div>
                <div class="desc">
                    <div>Minutes</div>
                    <div>Seconds</div>
                </div>*@
            </div>
            <!-- /. PAGE INNER  -->
        </div>
        <!-- /. PAGE WRAPPER  -->
    </div>
    <!-- /. WRAPPER  -->
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryui")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/dataTables")
    @Scripts.Render("~/bundles/metisMenu")
    @Scripts.Render("~/bundles/raphael")
    @Scripts.Render("~/bundles/morris")
    @Scripts.Render("~/bundles/custom")
    @Scripts.Render("~/bundles/component")
    @Scripts.Render("~/bundles/controls")
    @RenderSection("scripts", required: false)

    <script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.2/jquery.min.js">
    </script>
    <script src="@Url.Content("~/Scripts/jquery.countdown.js")" type="text/javascript"></script>

    <script type="text/javascript">
        $(function () {

            $('#counter').countdown({
                image: '/images/digits.png',
                startTime: '01:12:12:00'
            });
            var min, sec, dif ,count;
            min = $('#duration').text();
            dif = ':';
            sec = '00';
            count = pad(Math.floor(min/60), 2) +":"+ pad(min%60, 2)+':00'

            function pad(num, size) {
                var s = num + "";
                while (s.length < size) s = "0" + s;
                return s;
            }
            $('#counter_2').countdown({
                
                startTime: count,
                stepTime: 60,
                format: 'hh:mm:ss',
                digitImages: 6,
                digitWidth: 53,
                digitHeight: 77,
                timerEnd: function () {
                    {
                        document.forms["examform"].submit();
                    };
                },
                image: '/images/digits.png'
                
                
            });
        });
    </script>

</body>
</html>
