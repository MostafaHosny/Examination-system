            </div>
            <!-- Login -->
            @Html.Action("_PartialLogin", "Account", new { area = "" })
        </nav>
        <!-- /. NAV TOP  -->
        <nav class="navbar-default navbar-side" role="navigation">
            <div class="sidebar-collapse">
                <ul class="nav" id="main-menu">
                    <li class="text-center">
                        <img src="/img/find_user.png" class="user-image img-responsive" />
                    </li>


                    <li>
                        <a class="@((ViewBag.Page == "course") ? "active-menu" : "")" href="/student"><i class="fa fa-book fa-2x"></i> Courses </a>
                    </li>
                    <li>
                        <a class="@((ViewBag.Page == "chapters") ? "active-menu" : "")" href="/student/chapters"><i class="fa fa-pencil fa-2x"></i> Chapters</a>
                    </li>
                    <li>
                        <a class="@((ViewBag.Page == "exams") ? "active-menu" : "")" href="/student/exams"><i class="fa fa-print fa-2x"></i>Exams</a>
                    </li>
